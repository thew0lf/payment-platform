  subscription          ClientSubscription @relation(fields: [subscriptionId], references: [id])
  companyRecords        CompanyUsageRecord[]
  usageEvents           UsageEvent[]
  invoices              Invoice[]

  @@index([subscriptionId])
  @@index([clientId])
  @@index([status])
  @@index([periodStart, periodEnd])
  @@map("usage_periods")
