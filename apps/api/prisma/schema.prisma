model CompanyUsageRecord {
  id                    String    @id @default(cuid())
  usagePeriodId         String
  companyId             String

  // Metrics
  transactionCount      Int       @default(0)
  transactionVolume     BigInt    @default(0)
  apiCallCount          Int       @default(0)

  // Calculated costs (allocated share)
