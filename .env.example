# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/payment_platform

# Redis
REDIS_URL=redis://localhost:6379

# Auth0 (SSO Authentication)
AUTH0_ENABLED=false
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.avnz.io

# Payment Providers
PAYFLOW_VENDOR=your_vendor
PAYFLOW_USER=your_user
PAYFLOW_PASSWORD=your_password
PAYFLOW_PARTNER=your_partner

# NMI
NMI_SECURITY_KEY=your_nmi_key
NMI_USERNAME=your_nmi_username
NMI_PASSWORD=your_nmi_password

# Authorize.Net
AUTHNET_LOGIN_ID=your_login_id
AUTHNET_TRANSACTION_KEY=your_transaction_key

# Environment
NODE_ENV=development
API_PORT=3001
API_URL=http://localhost:3001
APP_URL=http://localhost:3000
ADMIN_DASHBOARD_URL=http://localhost:3000
COMPANY_PORTAL_URL=http://localhost:3003
# Production URLs:
# API_URL=https://api.avnz.io
# APP_URL=https://app.avnz.io
# ADMIN_DASHBOARD_URL=https://app.avnz.io
# COMPANY_PORTAL_URL=https://portal.avnz.io

# JWT
JWT_SECRET=your_jwt_secret_change_this_in_production

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASS=your_password
